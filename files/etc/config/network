
config interface 'loopback'
	option device 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config globals 'globals'
	option packet_steering '1'
	option ula_prefix 'fdd3:a78e:8180::/48'

config device
	option name 'br-lan'
	option type 'bridge'
	list ports 'lan2'

config interface 'lan'
	option device 'br-lan'
	option proto 'static'
	option netmask '255.255.255.0'
	option ip6assign '60'
	option ipaddr '172.16.1.1'

config interface 'wan'
	option device 'wan'
	option proto 'dhcp'

config device
	option type 'bridge'
	option name 'br-prov'
	list ports 'lan1'

config interface 'PROV_LAN'
	option proto 'static'
	option device 'br-prov'
	option ipaddr '10.4.4.1'
	option netmask '255.255.255.0'

config interface 'VPN'
	option proto 'none'
	option device 'tun0'
	option defaultroute '0'

